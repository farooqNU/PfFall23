#include <stdio.h>
int main()
{
       int firstnumber ;
       int secondnumber;
       int operator;
       int operation;
       printf("inputs for performing operation:\n");
       printf("first number:\n");
       scanf("%d" ,&firstnumber);
       printf("second number:\n");
       scanf("%d" ,&secondnumber);
       printf("operator:\n");
       scanf("%d" ,&operator);
       if (operator == +);
       operation = firstnumber + secondnumber;
             printf("operation is:%d\n",operation);
       if (operator == -);
       operation = firstnumber - secondnumber;
             printf("operation is:%d\n",operation);
       if (operator == *);
       operation = firstnumber * secondnumber;
             printf("operation is:%d\n",operation);
       if (operator == /);
       operation = firstnumber / secondnumber;
             printf("operation is:%d\n",operation);
        else
             printf("error");
       return 1;
}//end main
